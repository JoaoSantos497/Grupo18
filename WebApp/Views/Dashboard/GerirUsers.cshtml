@model List<User>
@{
    ViewData["Title"] = "Gerir Utilizadores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="Antiforgery.GetAndStoreTokens(HttpContext).RequestToken" />
    <title>Gerir Utilizadores</title>
    <script src="site.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet"> <!-- icon conta -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=edit" /> <!-- icon edit -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=person_remove" /> <!-- icon remove -->
    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="/lib/bootstrap_electro/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/style.css" />
</head>

<body>
    <header class="header">
        <div class="header-left">Dashboard</div>
        <div class="header-right">
            <div class="account-dropdown">
                <a href="#" class="account-icon">
                    <i class="fas fa-user"></i> Conta
                </a>
                <div class="dropdown-content">
                    <a href="/Admin/Logout">Logout</a>
                </div>
            </div>
        </div>
    </header>

    <div class="dashboard-container">
        <aside class="sidebar">
            <nav>
                <ul>
                    <li><a asp-action="GerirProdutos">Gerir Produtos</a></li>
                    <li><a asp-action="GerirUsers">Gerir Utilizadores</a></li>
                    <li><a asp-action="Settings">Settings</a></li>
                </ul>
            </nav>
        </aside>

        <div class="main-content">
            <h2>Gerir Utilizadores</h2>

            <a asp-action="CreateUser" class="btn btn-primary">Adicionar Utilizador</a>

            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Data Registo</th>
                        <th>Role ID</th>
                        <th>Editar</th>
                        <th>Remover</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr id="user-row-@user.UserID">
                            <td>@user.UserID</td>
                            <td>@user.Nome</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.DataRegisto</td>
                            <td>@user.RoleID</td>
                            <td>
                                <!-- Botão para Editar -->
                                <a asp-action="EditUser" asp-route-id="@user.UserID" class="btnedit btn-primary btn-sm">
                                    <span class="material-symbols-outlined"></span> Editar
                                </a>
                            </td>
                            <td>
                                <!-- Form para Remover -->
                                <form asp-action="DeleteUser" asp-route-id="@user.UserID" method="post" >
                                    <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>

