@{
    ViewData["Title"] = "Carrinho | ";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrinho</title>
    <link rel="script" href="site.js">

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="/lib/bootstrap_electro/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/style.css" />

    <style>
        #carrinho-compras .container {
            width: 80%;
            margin: auto;
        }

        .tabela-carrinho {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .tabela-carrinho th, .tabela-carrinho td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center;
            }

        .total-carrinho {
            margin-top: 20px;
            text-align: right;
        }

        .btn-finalizar {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
    </style> 
</head>

<body>

    <section id="carrinho-compras">
        <div class="container">
            <h2>Carrinho de Compras</h2>
            <table class="tabela-carrinho">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Preço</th>
                        <th>Total</th>
                        <th>Remover</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Exemplo de Produto no Carrinho -->
                    <tr>
                        <td>Produto A</td>
                        <td>
                            <input type="number" value="1" min="1" class="quantidade-produto">
                        </td>
                        <td>€20.00</td>
                        <td>€20.00</td>
                        <td><button class="remover-produto">Remover</button></td>
                    </tr>
                    <!-- Repita as linhas para cada item do carrinho -->
                </tbody>
            </table>

            <div class="total-carrinho">
                <p><strong>Total: </strong><span id="valor-total">€20.00</span></p>
                <button class="btn-finalizar">Finalizar Compra</button>
            </div>
        </div>
    </section>

        
</body>

