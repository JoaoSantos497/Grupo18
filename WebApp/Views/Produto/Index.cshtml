@{
	ViewData["Title"] = "Produto | ";
}
@model List<Produto>
<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/bootstrap.min.css" />

	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick.css" />
	<link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick-theme.css" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/nouislider.min.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="/lib/bootstrap_electro/css/font-awesome.min.css">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/style.css" />

	<title>Produto</title>
	

</head>

<body>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Stock</th>
                <th>Imagem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr id="user-row-@produto.ProdutoID">
                    <td><a asp-action="Produto" asp-route-id="@produto.ProdutoID"> @produto.ProdutoID</a></td>
                    <td>@produto.Nome</td>
                    <td>@produto.Marca</td>
                    <td>@produto.Modelo</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Preco</td>
                    <td>@produto.Stock</td>
                    <td>
                        <a asp-action="Produto" asp-route-id="@produto.ProdutoID">
                            <img src="@produto.ImagemProduto" alt="Imagem do Produto" style="width: 100px; height: auto;" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
