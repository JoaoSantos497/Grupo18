    <style>
    

        /* Estilo para o corpo */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* Estilo para a barra lateral */
        .sidebar {
            background-color: #343a40;
            color: white;
            height: 100vh;
            padding: 20px;
        }

            .sidebar h4 {
                color: #ffffff;
                margin-bottom: 20px;
            }

            /* Estilo dos itens de navegação */
            .sidebar .nav-link {
                color: #ffffff;
                padding: 10px 15px;
                text-decoration: none;
                border-radius: 5px;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

        /* Estilo para o título principal */
        main h1 {
            margin-top: 20px;
            color: #343a40;
        }

        /* Estilo da tabela */
        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

            .table th,
            .table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #dee2e6;
            }

            .table th {
                background-color: #007bff;
                color: white;
            }

            .table tr:hover {
                background-color: #f1f1f1;
            }

        /* Botões */
        .btn {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            color: white;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

    </style>
</head>

