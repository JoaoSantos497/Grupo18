@model WebApp.Models.Produto
@{
    ViewData["Title"] = "Adicionar Produto";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Produtos</title>
    <link rel="script" href="site.js">

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="/lib/bootstrap_electro/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="/lib/bootstrap_electro/css/style.css" />

   <style>
        /* Estilização geral para o formulário */
        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            /* Estilização para os rótulos */
            form .form-group label {
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
            }

            /* Estilização para os campos de entrada e área de texto */
            form .form-group input,
            form .form-group textarea {
                width: 100%;
                padding: 10px;
                font-size: 1rem;
                border: 1px solid #ddd;
                border-radius: 4px;
                transition: border-color 0.3s ease;
            }

                form .form-group input:focus,
                form .form-group textarea:focus {
                    border-color: #007bff;
                    outline: none;
                }

            /* Estilização para o botão de submissão */
            form button[type="submit"] {
                background-color: #007bff;
                color: white;
                padding: 10px 15px;
                border: none;
                border-radius: 4px;
                font-size: 1rem;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                form button[type="submit"]:hover {
                    background-color: #0056b3;
                }

            /* Estilização para o botão de cancelar */
            form a.btn-secondary {
                color: #555;
                background-color: #e0e0e0;
                padding: 10px 15px;
                border-radius: 4px;
                font-size: 1rem;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

                form a.btn-secondary:hover {
                    background-color: #bdbdbd;
                }

        /* Estilização para mensagens de erro */
        .text-danger {
            font-size: 0.875rem;
            color: #dc3545;
        }

   </style>
</head>

<body>
    

    <h2>Adicionar Novo Produto</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Marca" class="control-label">Marca</label>
            <textarea asp-for="Marca" class="form-control"></textarea>
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Modelo" class="control-label">Modelo</label>
            <textarea asp-for="Modelo" class="form-control"></textarea>
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Descricao" class="control-label">Descrição</label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Preco" class="control-label">Preço</label>
            <input asp-for="Preco" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StockQuantity" class="control-label">stock</label>
            <input asp-for="StockQuantity" type="number" class="form-control" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Adicinar Produto</button>
        <a asp-action="GerirProdutos" class="btn btn-secondary">Cancelar</a>
    </form>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
</body>
